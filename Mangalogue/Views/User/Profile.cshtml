@model User
<div class="container">
    <div class="row">
        <div id="profile-content" class="col-3">
            <div class="row">
                <div id="profile-picture">
                    <img id="profile-picture" src="data:image/gif;base64,@Convert.ToBase64String(Model.ProfileImage)" />
                </div>
            </div>
        </div>
        <div id="mangas" class="col-7">
            <div class="row">
                <h5>@Model.Username</h5>
            </div>
        </div>
        <div id="options" class="col-2">
            <a asp-action="CreateManga" asp-controller="Manga" class="btn btn-light">Upload Manga</a>
        </div>
    </div>
</div>
